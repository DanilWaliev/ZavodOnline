<Window x:Class="ZavodOnline.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЗаводОнлайн - клиент" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Верхняя панель -->
            <RowDefinition Height="Auto"/>
            <!-- Список сообщений -->
            <RowDefinition Height="*"/>
            <!-- Нижняя панель ввода -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ВЕРХНЯЯ ПАНЕЛЬ -->
        <Border Grid.Row="0"
                Padding="6"
                Margin="0,0,0,8"
                BorderThickness="0,0,0,1"
                BorderBrush="#DDDDDD"
                Background="#F8F8F8">
            <DockPanel>
                <TextBlock Text="Пользователь:"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,6,0"/>

                <TextBox x:Name="UserNameTextBox"
                         Width="200"
                         VerticalAlignment="Center"
                         Text="Начальник цеха"/>

                <TextBlock Text="   |   ЗаводОнлайн"
                           VerticalAlignment="Center"
                           Foreground="Gray"
                           Margin="8,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- СПИСОК СООБЩЕНИЙ -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,0,0,10"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,4"
                                Padding="6"
                                CornerRadius="8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <!-- базовые значения: чужое сообщение -->
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>

                                    <Style.Triggers>
                                        <!-- если IsOwn = true, меняем оформление -->
                                        <DataTrigger Binding="{Binding IsOwn}" Value="True">
                                            <Setter Property="Background" Value="#CFE8FF"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="BorderBrush" Value="#99BEEA"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <TextBlock Text="{Binding Author}"
                                           FontWeight="Bold"
                                           FontSize="12"/>

                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>

                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           HorizontalAlignment="Right"/>
                                
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- НИЖНЯЯ ПАНЕЛЬ ВВОДА -->
        <Border Grid.Row="2"
                Padding="8"
                BorderThickness="1,1,0,0"
                BorderBrush="#DDDDDD"
                Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Поле ввода занимает всё оставшееся -->
                    <ColumnDefinition Width="*"/>
                    <!-- Колонка под кнопку -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Поле ввода сообщения -->
                <TextBox x:Name="MessageTextBox"
                         Grid.Column="0"
                         Margin="0,0,8,0"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontSize="14"
                         VerticalContentAlignment="Top"
                         PreviewKeyDown="MessageTextBox_KeyDown" />

                <!-- Блок с кнопкой и подсказкой -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Bottom">
                    <Button x:Name="SendButton"
                            Content="Отправить"
                            Width="120"
                            Height="32"
                            FontSize="14"
                            Margin="0,0,0,4"
                            Click="SendButton_Click"/>

                    <TextBlock Text="Enter — отправить, Shift+Enter — новая строка"
                               FontSize="10"
                               Foreground="Gray"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
