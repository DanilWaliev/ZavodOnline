<Window x:Class="ZavodOnline.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЗаводОнлайн - клиент" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Список сообщений -->
            <RowDefinition Height="*"/>
            <!-- Нижняя панель ввода -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- СПИСОК СООБЩЕНИЙ -->
        <ScrollViewer Grid.Row="0"
                      Margin="0,0,0,10"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,4"
                                Padding="6"
                                CornerRadius="8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsOwn}" Value="True">
                                            <Setter Property="Background" Value="#CFE8FF"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="BorderBrush" Value="#99BEEA"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <TextBlock Text="{Binding Author}"
                                           FontWeight="Bold"
                                           FontSize="12"/>

                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>

                                <TextBlock Text="{Binding Timestamp, StringFormat={}{0:HH:mm}}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- НИЖНЯЯ ПАНЕЛЬ ВВОДА -->
        <Border Grid.Row="1"
                Padding="8"
                BorderThickness="1,1,0,0"
                BorderBrush="#DDDDDD"
                Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Обёртка для TextBox + Placeholder -->
                <Grid Grid.Column="0" Margin="0,0,8,0">
                    <TextBox x:Name="MessageTextBox"
                             Text="{Binding NewMessageText, UpdateSourceTrigger=PropertyChanged}"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             VerticalContentAlignment="Top"
                             PreviewKeyDown="MessageTextBox_KeyDown"
                             IsEnabled="{Binding IsConnected}">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Opacity" Value="1.0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Opacity" Value="0.6" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Плейсхолдер -->
                    <TextBlock Margin="4,4,0,0"
                               Foreground="Gray"
                               FontSize="12"
                               IsHitTestVisible="False"
                               VerticalAlignment="Top"
                               Opacity="0.7"
                               Text="{Binding PlaceholderText}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NewMessageText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Кнопка отправки -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Bottom">
                    <Button Width="120"
                            Height="32"
                            FontSize="14"
                            Content="Отправить"
                            Command="{Binding SendMessageCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
