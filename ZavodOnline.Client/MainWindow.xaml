<Window x:Class="ZavodOnline.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЗаводОнлайн - клиент" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Список сообщений -->
            <RowDefinition Height="*"/>
            <!-- Ввод и кнопка -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Список сообщений -->
        <ScrollViewer Grid.Row="0"
                      Margin="0,0,0,10"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,4"
                                Padding="6"
                                CornerRadius="8">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <!-- базовые значения: чужое сообщение -->
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>

                                    <Style.Triggers>
                                        <!-- если IsOwn = true, меняем оформление -->
                                        <DataTrigger Binding="{Binding IsOwn}" Value="True">
                                            <Setter Property="Background" Value="#CFE8FF"/>
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="BorderBrush" Value="#99BEEA"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <TextBlock Text="{Binding Author}"
                                           FontWeight="Bold"
                                           FontSize="12"/>

                                <TextBlock Text="{Binding Text}"
                                           TextWrapping="Wrap"
                                           Margin="0,2,0,0"/>

                                <TextBlock Text="{Binding Timestamp}"
                                           FontSize="10"
                                           Foreground="Gray"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Поле ввода + кнопка Отправить -->
        <DockPanel Grid.Row="1">
            <TextBox x:Name="MessageTextBox"
                     DockPanel.Dock="Left"
                     Margin="0,0,10,0"
                     Height="40"
                     VerticalContentAlignment="Center"
                     FontSize="14"/>

            <Button x:Name="SendButton"
                    Content="Отправить"
                    Width="120"
                    Height="40"
                    FontSize="14"
                    Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
