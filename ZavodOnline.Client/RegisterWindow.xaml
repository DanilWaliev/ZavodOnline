<Window x:Class="ZavodOnline.Client.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация"
        Height="480"
        Width="360"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid>
        <Border
            Width="300"
            Padding="20"
            CornerRadius="12"
            Background="#2A2A2A"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <StackPanel>

                <!-- Заголовок -->
                <TextBlock
                    Text="Регистрация"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>

                <!-- Логин -->
                <TextBlock Text="Логин" Foreground="#AAAAAA"/>
                <TextBox
                    Height="36"
                    Margin="0,5,0,15"
                    Padding="10,6"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль" Foreground="#AAAAAA"/>
                <PasswordBox
                    Height="36"
                    Margin="0,5,0,15"
                    Padding="10,6"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"/>

                <!-- Повтор пароля -->
                <TextBlock Text="Повторите пароль" Foreground="#AAAAAA"/>
                <PasswordBox
                    Height="36"
                    Margin="0,5,0,20"
                    Padding="10,6"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderThickness="0"/>

                <!-- Кнопка -->
                <Button
                    Content="Зарегистрироваться"
                    Height="40"
                    FontSize="15"
                    FontWeight="Bold"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
